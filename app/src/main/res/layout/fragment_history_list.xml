    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/history_recycler_view"
        android:name="combruce_willis.httpsgithub.yamblztranslate.View.HistoryFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="?attr/actionBarSize"
        app:layoutManager="LinearLayoutManager"
        tools:context="combruce_willis.httpsgithub.yamblztranslate.View.Fragment.HistoryFragment"
        tools:listitem="@layout/fragment_history_item" />

    <include layout="@layout/toolbar_history"/>

</android.support.design.widget.CoordinatorLayout>